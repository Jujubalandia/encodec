public void exemploConversoesExplicitas() {
    // ConversÃµes que podem causar perda de dados
    double valorPreciso = 123.456;
    int valorInteiro = valorPreciso.int;        // 123 (truncado)
    
    // ConversÃ£o entre tipos de diferentes tamanhos
    int64 numeroGrande = 9876543210i64;
    int numeroMenor = numeroGrande.int;         // PossÃ­vel overflow
    
    // ConversÃ£o usando operador .:
    float numeroFloat = 45.67f;
    int numeroTruncado = numeroFloat.: int;     // 45
    
    // VerificaÃ§Ã£o de conversÃ£o bem-sucedida
    Object objeto = Double(42.5);
    //int? resultado = objeto.int();                // null se falhar
    
    if (objeto != null) {
        pln("ConversÃ£o bem-sucedida: " # objeto);
    } else {
        pln("ConversÃ£o falhou");
    }
}


